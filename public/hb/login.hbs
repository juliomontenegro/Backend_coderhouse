{{#unless usuario.usuario}}
<div class="container">
    <div class="mainbox col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title text-center"><h4>Login de Usuario</h4></div>
            </div>
            <div class="form-horizontal">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input type="text" name="usuario" placeholder="Ingrese su nombre de usuario..." class="form-control" id="usuario">
                </div>

                <div class="form-group">
                    <div class="col-sm-12 controls">
                        <button class="btn btn-primary pull-right" onclick=loguear()><i class="glyphicon glyphicon-log-in"></i> Log in</button> 
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/unless}}
{{#if usuario.usuario}}
<div class="container pt-4">
<h4>Bienvenido: {{usuario.usuario.usuario}}</h4>
<button onclick=desloguear() class="btn btn-danger" >Desloguear</button>
</div>
{{/if}}
    